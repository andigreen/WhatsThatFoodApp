<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="24dp">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow>

            <TextView
                android:id="@+id/filter_rating_label"
                style="@style/FilterLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/filter_rating"/>

            <Spinner
                android:id="@+id/filter_rating_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </TableRow>

        <TableRow>

            <RelativeLayout android:layout_column="1">

                <RatingBar
                    android:id="@+id/filter_rating_rating"
                    style="@style/RatingBarRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/filter_price_label"
                style="@style/FilterLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/filter_price"/>

            <Spinner
                android:id="@+id/filter_price_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </TableRow>

        <TableRow>

            <RelativeLayout android:layout_column="1">

                <RatingBar
                    android:id="@+id/filter_price_rating"
                    style="@style/RatingBarPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/filter_created_label"
                style="@style/FilterLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/filter_created"/>

            <Spinner
                android:id="@+id/filter_created_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/filter_sort_label"
                style="@style/FilterLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Sort by"/>

            <Spinner
                android:id="@+id/filter_sort_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </TableRow>
    </TableLayout>
</RelativeLayout>